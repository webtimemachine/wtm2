{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/backend/**",
        "build/app_chrome/**",
        "dist/**",
        "build/app_firefox/**",
        "build/app_safari/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false,
      "env": [
        "PORT",
        "BASE_URL",
        "BCRYPT_SALT",
        "CRYPTO_SALT",
        "CRYPTO_KEY",
        "JWT_ACCESS_SECRET",
        "JWT_ACCESS_EXPIRATION",
        "JWT_REFRESH_SECRET",
        "JWT_REFRESH_EXPIRATION",
        "JWT_PARTIAL_SECRET",
        "JWT_RECOVERY_TOKEN_SECRET",
        "JWT_RECOVERY_TOKEN_EXPIRATION",
        "JWT_EXTERNAL_LOGIN_SECRET",
        "JWT_EXTERNAL_LOGIN_EXPIRATION",
        "KNOWN_EXTERNAL_CLIENTS",
        "EMAIL_URI",
        "OPENAI_ACCESS_TOKEN",
        "AVOID_DOMAIN_LIST",
        "DATABASE_URL",
        "DATABASE_URL_NON_POOLING"
      ]
    },
    "lint": {
      "cache": false
    }
  }
}
