{
  "name": "wtm",
  "version": "1.7.2",
  "description": "",
  "scripts": {
    "test": "turbo run test",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "extension:dev": "turbo run dev --filter=@wtm/extension",
    "extension:dev:chrome": "npm run dev:chrome --workspace=@wtm/extension",
    "extension:dev:firefox": "npm run dev:firefox --workspace=@wtm/extension",
