// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  MEMBER
  ADMIN
}

model User {
  id        BigInt    @id @default(autoincrement())
  userType  UserType
  email     String    @unique @db.VarChar()
  password  String?   @db.VarChar()
  createdAt DateTime  @default(now()) @db.Timestamptz(0)
  updateAt  DateTime? @updatedAt @db.Timestamptz(0)
  deletedAt DateTime? @db.Timestamptz(0)

  sessions          Session[]
  navigationEntries NavigationEntry[]

  @@map("users")
}

model Session {
  id           BigInt    @id @default(autoincrement())
  refreshToken String    @db.VarChar()
  deviceId     String    @unique @db.VarChar()
  userAgent    String    @default("") @db.VarChar()
  expiration   DateTime? @db.Timestamptz(0)
  user         User      @relation(fields: [userId], references: [id])
  userId       BigInt

  createdAt DateTime  @default(now()) @db.Timestamptz(0)
  updateAt  DateTime? @updatedAt @db.Timestamptz(0)

  @@map("sessions")
}

model NavigationEntry {
  id        BigInt  @id @default(autoincrement())
  url       String  @db.VarChar()
  title     String  @db.VarChar()
  content   String? @db.Text
  userAgent String  @default("") @db.VarChar()

  navigationDate DateTime @default(now()) @db.Timestamptz(0)

  user   User   @relation(fields: [userId], references: [id])
  userId BigInt

  createdAt DateTime  @default(now()) @db.Timestamptz(0)
  updateAt  DateTime? @updatedAt @db.Timestamptz(0)

  @@map("navigation_entry")
}
