{
  "name": "@wtm/extension",
  "private": true,
  "version": "1.7.4",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"test/**/*.ts\"",
    "build": "npm run ensure-build-dir && npm run build:chrome && npm run build:firefox && npm run build:ios",
    "build:chrome": "cross-env BROWSER=chrome npm run build:target",
    "build:ios": "cross-env BROWSER=ios_extension npm run build:target && npm run copy:ios",
    "build:firefox": "cross-env BROWSER=firefox npm run build:target",
    "build:target": "vite build && rm -rf ../../build/app_$BROWSER && mv $BROWSER ../../build/app_$BROWSER",
    "copy:ios": "mkdir -p ../../native && rm -rf ../../native/app_ios_extension && cp -r ../../build/app_ios_extension ../../native/",
    "dev": "npm run ensure-build-dir && concurrently \"npm run dev:chrome\" \"npm run dev:firefox\" --names chrome,firefox",
    "dev:chrome": "nodemon --exec npm run build:chrome",
    "dev:firefox": "nodemon --exec npm run build:firefox",
    "ensure-build-dir": "mkdir -p ../../build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --passWithNoTests --coverage"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@tanstack/react-query": "^5.29.2",
    "@wcj/html-to-markdown": "^2.1.1",
    "@wtm/api": "*",
    "@wtm/utils": "*",
    "cheerio": "^1.0.0",
    "clsx": "^2.1.0",
    "dom-to-semantic-markdown": "^1.2.4",
    "framer-motion": "^11.0.28",
    "jwt-decode": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.1.0",
    "react-markdown": "^9.0.1",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^2.0.0",
    "wouter": "^3.3.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.26",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.3",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.266",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
